<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="bg-primary m-1 p-1">
        <h4>
            @ViewBag.Title
            @if (User?.Identity?.Name == "Admin")
            {
                <a asp-controller="Game" asp-action="List" class="btn btn-primary float-right">Games</a>
            }
            <a asp-controller="Account" asp-action="Logout" class="btn btn-primary float-right">Logout</a>
            <a asp-controller="User" asp-action="UserProfile" class="btn btn-primary float-right">User profile</a>
            <a asp-controller="Shelf" asp-action="List" class="btn btn-primary float-right">My shelf</a>
        </h4>
    </div>
    <div class="m-1 p-1">
        @RenderBody()
    </div>
</body>
</html>
