@model ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}
<form method="post" asp-controller="Account" asp-action="ResetPassword" class="form-container">
    <h1>Reset password</h1>
    <input type="hidden" asp-for="EmailToken" />
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <div class="custom-danger"><span asp-validation-for="Email" class="text-danger"></span></div>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewPassword">New password</label>
        <div class="custom-danger"><span asp-validation-for="NewPassword" class="text-danger"></span></div>
        <input asp-for="NewPassword" class="form-control" />
    </div>
    <div class="text-left">
        <button class="btn btn-info btn-block" type="submit">Save</button>
    </div>
</form>

